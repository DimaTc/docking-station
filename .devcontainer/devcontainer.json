// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
    "dockerComposeFile": "docker-compose.yaml",
    "service": "vsc-docking-station",
    "workspaceFolder": "/workspaces/docking-station",

    // Features to add to the dev container. More info: https://containers.dev/features.
    // "features": {},

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "cd ./docking-station-app && concurrently --names=LINK,BUN,PIP --prefix-colors=auto \"ln -snf /app ../app\" \"bun install\" \"pip install notebook -r requirements.txt\"",

    // Use 'postStartCommand' to run commands after the container is started.
    // "postStartCommand": "",

    "forwardPorts": [3000, 3001],

    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "formulahendry.auto-complete-tag",
                "Gruntfuggly.todo-tree",
                "maattdd.gitless",
                "mhutchie.git-graph",
                "MohammadBaqer.better-folding",
                "ms-azuretools.vscode-docker",
                "ms-python.autopep8",
                "ms-python.isort",
                "ms-python.python",
                "rangav.vscode-thunder-client",
                "richie5um2.vscode-sort-json",
                "wmaurer.change-case"
            ]
        }
    }
}
